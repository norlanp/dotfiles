{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["@tarquinen/opencode-dcp@latest"],
  "mcp": {
      "playwright": {
        "type": "local",
        "command": [
          "npx",
          "@playwright/mcp@latest",
          "--browser",
          "firefox"
        ],
        "enabled": true
      }
    },
  "snapshot": false,
  "keybinds": {
    "leader": "ctrl+x",
    "messages_page_up": "shift+u",
    "messages_page_down": "shift+d",
    "input_submit": "enter",
    "input_newline": "shift+k"
  }
}
